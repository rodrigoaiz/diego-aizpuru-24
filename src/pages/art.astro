---
import Layout from '@/layouts/Layout.astro';
import { art, sections } from "@art";
interface Art {
  name: string;
  technique: string;
  image: string;
  thumbnail: string;
  id: number;
}
const currentPath = Astro.url.pathname;
const section = sections.find((section) => section.url === currentPath);
---
{section && (
  <Layout title={section.name}>
    <div class="max-w-screen-lg mx-auto">
      <h2 class="text-3xl my-5 uppercase">{section.name}</h2>
      <div class="grid grid-cols-2 xl:grid-cols-4 gap-5">
        {art.map((item) => (
          <a href={"/art/" + item.id.toString()}>
            <article class="col-span-1">
              <header>
                <img class="xl:saturate-0 xl:hover:saturate-100 ease-in-out duration-200" loading="lazy" src={item.thumbnail} alt={item.name} />
              </header>
              <footer>
                <h3 class="font-light text-center text-base mt-1">{item.name}</h3>
              </footer>
            </article>
          </a>
        ))}
      </div>
    </div>
  </Layout>
)}
