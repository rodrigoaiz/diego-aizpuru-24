---
import Layout from "@/layouts/Layout.astro"
import { bio , me } from "@art"
interface Bio {
  bio: string;
  image: string;
}
import { sections } from "@art";
---
<Layout title="Biografía">
  <div class="max-w-screen-lg mx-auto">
    <h2 class="text-3xl my-5 uppercase">Biografía</h2>
    <div class="grid grid-cols-3 gap-4">
      <div>
        <img src={bio.image} alt="Diego Aizpuru" class="w-full" />
        <h3>{bio.name}</h3>
        <h3>{bio.profession}</h3>
      </div>
      <div class="col-span-2">
        <p>{me.description1}</p>
        <p>{me.description2}</p>
        <p>{me.description3}</p>
        <p>{me.description4}</p>
        <p>{me.description5}</p>
        <p>{me.description6}</p>
      </div>
    </div>
  </div>
</Layout>
